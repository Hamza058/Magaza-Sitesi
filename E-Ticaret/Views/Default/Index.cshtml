@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/araba.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/img/araba.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/img/araba.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-9 ps-5">
            <h2 class="text-center">Ürünler</h2>
            <div class="row mb-1">
                @foreach (var item in Model)
                {
                    <div class="me-2 mt-2 border bordered zoom" style="width:32% !important">
                        <div class="row-cols-fluid-4 p-2">
                            <div class="col mb-1 border border-dark">
                                <div>
                                    <a asp-controller="Default" asp-action="Single" asp-route-id="@item.ProductId">
                                        <img src="~/img/@item.ImageUrl" width="100%" />
                                    </a>
                                </div>
                            </div>
                            <div class="col text-center pt-2 text-danger">
                                <p class="border-bottom bordered pb-1">@item.Product.Price TL</p>
                            </div>
                            <div class="col text-center">
                                <div class="col ">
                                    <b>@item.Product.Brand.BrandName</b> @item.Product.ProductName
                                    @*@{
                                        if (item.Product.Brand.BrandName.Length + item.Product.ProductName.Length < 18)
                                        {
                                            <b>@item.Product.Brand.BrandName</b> @item.Product.ProductName
                                        }
                                        else
                                        {

                                            <b>@item.Product.Brand.BrandName</b> <label>@item.Product.ProductName.Substring(0,Math.Abs(18 - item.Product.Brand.BrandName.Length))</label>
                                        }
                                    }*@
                                </div>
                                <div class="col">@item.Product.ProductCategory.ProductCategoryName</div>
                            </div>
                            <div class="col text-center mt-2">
                                <vc:size-and-color id="@item.ProductId"></vc:size-and-color>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-3 mt-2">
            <div class="rowrow-cols-fluid-2 p-2">
                <div class="col border-bottom dropdown mb-3">
                    <div class="col text-center border-bottom bordered">
                        <a class="dropdown-toggle text-decoration-none text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <h5>Kategoriler</h5>
                        </a>
                        <ul class="dropdown-menu" style="list-style:none">
                            @foreach (var item in ViewBag.category as List<ProductCategory>)
                            {
                                <li><a class="dropdown-item" asp-controller="Default" asp-action="Index" asp-route-f="@item.ProductCategoryName">@item.ProductCategoryName</a></li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col border-bottom dropdown">
                    <div class="col text-center border-bottom bordered">
                        <a class="dropdown-toggle text-decoration-none text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <h5>Markalar</h5>
                        </a>
                        <ul class="dropdown-menu" style="list-style:none">
                            @foreach (var item in ViewBag.brand as List<Brand>)
                            {
                                <li><a class="dropdown-item" asp-controller="Default" asp-action="Index" asp-route-f="@item.BrandName">@item.BrandName</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>