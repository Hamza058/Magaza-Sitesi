@using EntityLayer.Concrete
@model EntityLayer.Concrete.Image

@{
    ViewData["Title"] = "Single";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="container">
    <div class="row border">
        <div class="col p-3">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                <div class="carousel-indicators">
                    @for (int i = 0; i < ViewBag.imgs.Count; i++)
                    {
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i"
                                class="active bg-dark" aria-current="true" aria-label="Slide @i"></button>
                    }
                </div>
                <div class="carousel-inner">
                    @foreach (var item in ViewBag.imgs as List<Image>)
                    {
                        <div class="carousel-item active">
                            <img src="~/img/@item.ImageUrl" class="d-block w-100" alt="...">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col">
            <form asp-controller="ShopCart" asp-action="AddShop" asp-route-id="@Model.ProductId" asp-route-color="Color" asp-route-size="Size" method="post">
                <div class="row-fluid-cols-6">
                    <div class="col">
                        <div class="row">
                            <div class="col-auto"><label class="fs-1 fw-bold p-0">@Model.Product.Brand.BrandName</label></div>
                            <div class="col-auto"><label class="fs-2 pt-2"> @Model.Product.ProductName</label></div>
                        </div>
                    </div>
                    <div class="col"><text class="text-danger">Satıcı: </text>@Model.Product.Brand.BrandName</div>
                    <div class="col mt-1"><b>@Model.Product.Price TL</b></div>
                    <div class="col mt-3">
                        <div class="row-fluid-cols-2">
                            <div class="col">
                                <h6>Renkler</h6>
                            </div>
                            <div class="col">
                                <select name="Color" class="form-select" asp-items="@ViewBag.Colors"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col mt-3">
                        <div class="row-fluid-cols-2">
                            <div class="col">
                                <h6>Numaralar</h6>
                            </div>
                            <div class="col">
                                <select name="Size" class="form-select" asp-items="@ViewBag.Numbers"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col text-end mt-4">
                        <button type="submit" class="btn btn-success">Sepete Ekle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col mt-3">
        <table class="table table-bordered" width="100%">
            <thead class="bg-secondary text-center">
                <tr style="width:100%">
                    <td width="50%"><a href="/Comment/ProductInfo" class="text-decoration-none text-light" target="info">Ürün Açıklama</a></td>
                    <td width="50%">
                        <a asp-controller="Comment" asp-action="Index" asp-route-id="@Model.ProductId" class="text-decoration-none text-light" target="info">Yorumlar</a>
                    </td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="2" height="300px">
                        <iframe src="/Comment/ProductInfo" name="info" width="100%" height="100%"></iframe>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col mt-3 p-3">
        <h5>Diğer Ürünler</h5>
        <div class="row">
            @foreach (var item in ViewBag.products as List<Image>)
            {
                <div class="col me-1 border">
                    <div class="row-fluid p-2">
                        <div class="col mb-1 border border-dark">
                            <img src="~/img/@item.ImageUrl" width="100%" />
                        </div>
                        <div class="col text-center pt-2 text-danger">
                            <p class="border-bottom bordered pb-1">@item.Product.Price TL</p>
                        </div>
                        <div class="col text-center">
                            <div class="col "><b>@item.Product.Brand.BrandName</b> @item.Product.ProductName</div>
                            <div class="col">@item.Product.ProductCategory.ProductCategoryName</div>
                        </div>
                        <div class="col text-center mt-2">
                            <vc:size-and-color id="@item.ProductId"></vc:size-and-color>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>