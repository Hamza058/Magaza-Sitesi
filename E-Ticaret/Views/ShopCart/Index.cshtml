@using EntityLayer.Concrete
@model List<ShopCart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <table class="table">
        <tr>
            <th>Ürün Adı</th>
            <th>Renk</th>
            <th>Beden</th>
            <th>Fiyat</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ShopCartProductName</td>
                <td>@item.ShopCartProductColor</td>
                <td>@item.ShopCartProductSize</td>
                <td>@item.ShopCartProductPrice</td>
                <td><a href="/ShopCart/DeleteShop/@item.ShopCartId">Sil</a></td>
            </tr>
        }
    </table>
</div>